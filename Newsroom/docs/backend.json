{
  "entities": {
    "Subscriber": {
      "title": "Subscriber",
      "description": "Represents a newsletter subscriber.",
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "The subscriber's email address."
        },
        "name": {
          "type": "string",
          "description": "The subscriber's name."
        },
        "isSubscribed": {
          "type": "boolean",
          "description": "Indicates if the user is currently subscribed."
        },
        "subscribedAt": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamp when the subscriber was added."
        }
      },
      "required": ["email", "name", "isSubscribed", "subscribedAt"]
    }
  },
  "auth": {
    "providers": []
  },
  "firestore": {
    "/newsletterSubscribers/{subscriberId}": {
      "schema": {
        "$ref": "#/entities/Subscriber"
      },
      "description": "Stores individual newsletter subscribers."
    }
  }
}
